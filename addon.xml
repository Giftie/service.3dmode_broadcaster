<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.3dmode_broadcaster"
       name="3D Mode UDP Broadcaster"
       version="0.0.1"
       provider-name="Giftie">
  <requires>
    <import addon="xbmc.python" version="2.12"/>
  </requires>
  <extension point="xbmc.service"
             library="service.py" start="login">
  </extension> 
  <extension point="xbmc.addon.metadata">
    <language></language>
    <platform>all</platform>
    <summary>3D Mode Trigger</summary>
    <description>This service script is designed to UDP Broadcast triggered by 3D Mode of XBMC</description>
  </extension>
</addon>
